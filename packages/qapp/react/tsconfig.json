{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ESNext",
        "declaration": true,
        "declarationDir": "./dist",
        "declarationMap": true,
        "lib": ["ES2015", "DOM"],
        "skipLibCheck": true,
        "jsx": "react"
    },
    "include": ["./src/**/*"],
    "exclude": ["**/*.spec.*"]
}
